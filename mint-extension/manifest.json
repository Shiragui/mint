{
  "manifest_version": 3,
  "name": "MINT",
  "version": "1.0.0",
  "description": "Select any area on a webpage, analyze it with Vision AI, and send the result to your backend.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://api.dedaluslabs.ai/*", "https://generativelanguage.googleapis.com/*", "https://serpapi.com/*", "https://api.imgbb.com/*", "<all_urls>"],
  "background": {"service_worker": "background.js"},
  "action": {
    "default_popup": "popup.html",
    "default_title": "MINT",
    "default_icon": {
      "16": "icons/minn.png",
      "32": "icons/minn.png",
      "48": "icons/minn.png"
    }
  },
  "icons": {
    "16": "icons/minn.png",
    "32": "icons/minn.png",
    "48": "icons/minn.png",
    "128": "icons/minn.png"
  },
  "options_ui": {"page": "options.html", "open_in_tab": true},
  "content_scripts": [{"matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle"}],
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
}
